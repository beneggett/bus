<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>

  <%= f.input :cuisine_id, label: "Cuisine Name", collection: @cuisines %>

  <%= f.simple_fields_for :cuisine do |cuisine| %>
  <%= cuisine.input :name, label: "Add Cuisine", placeholder: "Leave blank if dropdown selected" %>
  <% end %>

  <%= f.simple_fields_for :dishes do |dish| %>
    <%= dish.input :plate, label: "plate" %>
    <%= dish.input :price, label: "price" %>
    <%= dish.input :side_dish, label: "Side Dish" %>

     <%= dish.simple_fields_for :ingredients do |ingredient| %>
      <%= ingredient.input :name, label: "Add Ingredient"%>
    <% end %>

  <% end %>



  <%= f.button :submit %>
<% end %>