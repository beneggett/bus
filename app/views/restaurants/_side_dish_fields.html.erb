<div class="nested-fields well well-lg">
  <div class="row">
    <div class="col-xs-3"><%=f.input :name, label: "Side Dish Name" %></div>
    <div class="col-xs-4"><p class="btn btn-danger btn-xs"><%=link_to_remove_association "Remove Side Dish", f %></p></div>
  </div>
    <%= f.simple_fields_for :side_ingredients do |side_ingredient| %>
    <br/>
      <%=  render 'side_ingredient_fields', f: side_ingredient %>
    <% end %>
  <div class="link">
    <p class="btn btn-success"><%= link_to_add_association 'Add Side Ingredient', f, :side_ingredients %></p>
  </div>
</div>